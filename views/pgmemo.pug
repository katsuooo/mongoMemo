doctype html
html(ng-app='pgmemoApp')
  head
    meta(charset='utf-8')
    meta(name='veiwport' content='width=device-width initial-scale=1')
    title pgMemo
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css')
    link(rel='stylesheet' href='./stylesheets/pgmemo.css')
    script(src='https://code.jquery.com/jquery-3.3.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.2/angular.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js')
    script(src='./javascripts/pgmemo.js')  
    script(src='./javascripts/services.js')   
  body
    .container-fluid(ng-controller='pgmemoCont')
      h1 program Memo
      .row
        .col-sm-3.bg-success
          h3 recent 20
        .col-sm-9.bg-warning
          h3 input
          h4 title
          label()
            input()
          h4 program {{typeSelection}}
          label(ng-repeat='typeName in info.type')
            input(
              type='checkbox'
              name='selectedType'
              value='{{typeName}}'
              ng-checked='typeSelection.indexOf(typeName) > -1'
              ng-click='toggleType(typeName)'
              ) 
            span#cblabel {{typeName}}
          h4 platform {{platformSelection}}
          label(ng-repeat='platformName in info.platform')
            input(
              type='checkbox'
              name='selectedPlatform'
              value='{{platformName}}'
              ng-checked='platformSelection.indexOf(platformName) > -1'
              ng-click='togglePlatform(platformName)'
              ) 
            span#cblabel {{platformName}}
          h4 tags {{pgmemoTag}}
          .input-group
            label()
            input.form-control(
              type='text'
              aria-label='pgmemoTag'
              value='{{pgmemoTag}}'
              ) 
          h4 text {{pgmemoText}}
          .input-group
            //.input-group-prepend
            //  span.input-gropu-text#basic-textarea テキストエリア付き
            textarea.form-control(area-label='textarea' area-describedby='basic-textarea' rows='10') {{pgmemoText}}
          br
          br
          br
          span {{typeSelection}} {{platformSelection}}


